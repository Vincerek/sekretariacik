<Window x:Class="Sekretariacik.ShortCutEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sekretariacik"
        mc:Ignorable="d"
        Title="{Binding ShortCutEditTitle}" Height="100" Width="496.955">
    <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
        <Label Content="Ustaw nowy skrót: CTRL + " HorizontalAlignment="Left" Margin="20,19,0,0" VerticalAlignment="Top" Width="147"/>
        <TextBox Name="ShortcutValue" HorizontalAlignment="Left" Height="23" Margin="172,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="65"/>
        <Button Name="SaveShortcut" Content="Zapisz" HorizontalAlignment="Left" Margin="252,25,0,0" VerticalAlignment="Top" Width="75" Click="Click_SaveShortcut"/>
        <Button Name="CancelShortcut" Content="Anuluj" HorizontalAlignment="Left" Margin="341,25,0,0" VerticalAlignment="Top" Width="75" Click="Click_CancelShortcut"/>

    </Grid>
</Window>
